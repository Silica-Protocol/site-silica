<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Animate live performance metrics
    function animateLiveMetrics() {
      const tpsElement = document.getElementById('live-tps');
      const finalityElement = document.getElementById('live-finality');

      if (tpsElement) {
        const baseTps = 800000;
        const variation = 100000;
        const newTps = baseTps + Math.floor(Math.random() * variation);
        tpsElement.textContent = newTps.toLocaleString();
      }

      if (finalityElement) {
        const baseFinality = 0.8;
        const variation = 0.4;
        const newFinality = (baseFinality + Math.random() * variation).toFixed(2);
        finalityElement.textContent = newFinality + 's';
      }
    }

    // Update metrics every 3 seconds
    setInterval(animateLiveMetrics, 3000);
  });
</script>