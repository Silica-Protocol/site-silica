---
// Blog Post Component for Silica Website
const { title, date, author, category, readingTime } = Astro.props;
---

<div class="bg-slate-800/50 backdrop-blur-sm rounded-xl border border-cyan-500/20 overflow-hidden hover:border-cyan-500/40 hover:shadow-xl hover:shadow-cyan-500/20 transition-all duration-300">
  <div class="p-6">
    <div class="flex items-center justify-between mb-4">
      <div class="flex items-center space-x-3">
        <span class="bg-cyan-500/20 border border-cyan-500/30 text-cyan-400 text-xs font-medium px-3 py-1 rounded-full">{category}</span>
        <span class="text-sm text-slate-400">{readingTime} min read</span>
      </div>
      <div class="flex items-center space-x-2">
        <div class="w-6 h-6 bg-gradient-to-br from-cyan-500 to-teal-500 rounded-full flex items-center justify-center shadow-lg shadow-cyan-500/50">
          <span class="text-xs text-white font-bold">{author.substring(0, 1)}</span>
        </div>
        <span class="text-sm text-slate-300">{author}</span>
      </div>
    </div>

    <h2 class="text-xl font-semibold text-white mb-4">{title}</h2>
    <div class="flex items-center text-sm text-slate-400 mb-4">
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
      </svg>
      <span>{date}</span>
    </div>

    <div class="prose prose-invert max-w-none text-slate-300">
      <slot />
    </div>
  </div>
</div>